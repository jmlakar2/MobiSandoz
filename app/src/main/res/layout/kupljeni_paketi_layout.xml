<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff2799d5">


    <RelativeLayout
        android:id = "@+id/nematePaket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nemate niti jedan kupljeni paket!"
            android:id="@+id/nemaAPaketaTxt"
            android:layout_gravity="center"
            android:textColor="#ffffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="35dp"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true" />/>
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:divider="@android:color/white"
        android:dividerHeight="2dp"
        android:background="@drawable/abc_list_selector_background_transition_holo_dark"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">
    </ListView>

</LinearLayout>