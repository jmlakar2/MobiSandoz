<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff2799d5">

        <WebView
            android:layout_width="match_parent"
            android:layout_height="639dp"
            android:id="@+id/upute"
            android:visibility="gone"

        />

        <EditText
            android:layout_width="307dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/unosSerKodEdit"
            android:background="#ffffffff"
            android:textColor="#ff2799d5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textSize="30dp"
            android:hint="unesite serijski broj"
            android:elegantTextHeight="false"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Uneseni kod nije ispravan"
            android:id="@+id/pogreskaSerTxt"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#ffff1d19"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="Unesi"
            android:id="@+id/unesiSerBtn"
            android:layout_gravity="center_horizontal"
            android:background="#ffffffff"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ff2799d5"/>


    </LinearLayout>
